{
  "manifest_version": 3,

  "name": "OneClip",
  "description": "This extension can copy sentence on web page by one click.",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contents.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"]
}
