{
  "dependencies": {
    "lint-staged": "^10.5.4"
  },
  "scripts": {
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write --single-quote=true",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^7.25.0",
    "husky": "4"
  }
}
